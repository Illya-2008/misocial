mixin oneCard (item)
    figure.card
        figcaption 
            .cardimg
                img(src=item.src, alt=item.alt)
                p.personal PERSONAL
                p.price= item.price
                    span /month
                .description
                    each desc in item.description 
                        p.description= desc
                a(href=item.href).btn select plan 